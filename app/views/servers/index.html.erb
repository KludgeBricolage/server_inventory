<p id="notice"><%= notice %></p>

<h1>Servers</h1>

<%= form_for :server, remote: true, method: :get do |f| %>
  <%= text_field_tag :q, params[:q] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Host name</th>
      <th>Model</th>
      <th>Serial no</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody id="servers">
    <%=render partial: 'servers', locals: {servers: @servers} %>
  </tbody>
</table>

<br>

<%= link_to 'New Server', new_server_path %>
