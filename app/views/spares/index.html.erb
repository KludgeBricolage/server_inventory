<div class="section">
  <h2>Spares List</h2>

  <%= form_for :spares, remote: true, method: :get do |f| %>
    <%= text_field_tag :q, params[:q] %>
    <%= f.button fa_icon "search" %>
    <%= link_to new_spare_path do %>
      <%= f.button fa_icon("plus") %>
    <% end %>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Item Type</th>
      <th>Description</th>
      <th>Stock</th>
      <th>Date Delivered</th>
      <th>Date Warranty</th>
      <th>Balance</th>
      <th>Category</th>
      <% if current_user %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>

  <tbody id="spares">
    <%=render partial: 'spares', locals: {spares: @spares} %>
  </tbody>
</table>
