<p id="notice"><%= notice %></p>

<h1>Spares</h1>

<%= form_for :spares, remote: true, method: :get do |f| %>
  <%= text_field_tag :q, params[:q] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Date delivered</th>
      <th>Date warranty</th>
      <th>Stock</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="spares">
    <%=render partial: 'spares', locals: {spares: @spares} %>
  </tbody>
</table>

<br>

<%= link_to 'New Spare', new_spare_path %>
