<%= form_with(model: user, local: true, class: 'single', id: 'user_form') do |form| %>
  <h2><%= title %></h2>
  <span>
    <%= form.label :username, class: 'label'%>
    <%= form.text_field :username, class: 'value', required: true %>
  </span>

  <span>
    <%= form.label :first_name, class: 'label'%>
    <%= form.text_field :first_name, class: 'value' %>
  </span>

  <span>
    <%= form.label :last_name, class: 'label'%>
    <%= form.text_field :last_name, class: 'value' %>
  </span>

  <span>
    <%= form.label :password, class: 'label' %><br />
    <%= form.password_field :password, autocomplete: "new-password", class: 'value', required: true %>
  </span>

  <span>
    <%= form.label :password_confirmation, class: 'label' %><br />
    <%= form.password_field :password_confirmation, autocomplete: "new-password", class: 'value', required: true %>
  </span>

  <% if current_user %>
    <span>
      <%= form.label :role, class: 'label'%>
      <%= select_tag :role, options_for_select(User.roles.map {|k, v| [k.humanize.capitalize, k]}), class: 'value', name: 'user[role]', id: 'user_role'  %>
    </span>
  <% end %>

  <h3>
    <%= link_to 'Back', users_path %> |
    <% if action_name == "edit"%>
      <%= link_to 'New', new_user_path %> <%= fa_icon("plus") %> |
    <% end %>
    <%= link_to 'Save', "", onclick: "document.getElementById('user_form').submit()" %> <%= fa_icon("save") %>
  </h3>
<% end %>