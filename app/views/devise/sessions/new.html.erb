<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: 'new_user', class: 'single' }) do |f| %>
  <h2>Login</h2>

  <span>
    <%= f.label :username, class: 'label' %><br />
    <%= f.text_field :username, autofocus: true, class: 'value' %>
  </span>

  <span>
    <%= f.label :password, class: 'label' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'value' %>
  </span>

  <h3>
    <%= link_to 'Go Sign Up', new_user_path %> |
    <%= link_to 'Login', "", onclick: "document.getElementById('new_user').submit()" %> <%= fa_icon("sign-in") %>
  </h3>

<% end %>

